<h1>Books</h1>


  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><a href="/books/show">Show</a></td>
        <td><a href="/books/edit">Edit</a></td>
        <td><a href="/books/destroy">Destroy</a></td>
      </tr>
      <% end %>
    </tbody>
  </table>


